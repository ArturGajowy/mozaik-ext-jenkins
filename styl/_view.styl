.jenkins
  &__view
    &__job
      &__build
        &__status, &__colored_status
          font-size 1.6em
          &--building
            background-color lighten($unknown-color, 15%)
          &--building&__previous--success
            background-color lighten($success-color, 15%)
          &--building&__previous--failure
            background-color lighten($failure-color, 15%)
          &--success
            background-color $success-color
          &--failure
            background-color $failure-color
          &--aborted
            background-color $unknown-color
          &--unknown
            background-color $unknown-color
